generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Guild {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  gid       String   @unique
  prefix    String   @default("!")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User[]
  Role      Role[]
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  uid       String   @unique
  gid       String
  xp        Int      @default(0)
  coins     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Guild     Guild    @relation(fields: [gid], references: [gid])
}

model Role {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  rid       String   @unique
  gid       String
  price     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Guild     Guild    @relation(fields: [gid], references: [gid])
}
