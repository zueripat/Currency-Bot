generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Guild {
  id        String   @id @default(cuid())
  gid       String   @unique
  prefix    String   @default("!")
  minXp     Int      @default(10)
  maxXp     Int      @default(20)
  minVXp    Int      @default(10)
  maxVXp    Int      @default(20)
  status    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User[]
  Role      Role[]
}

model User {
  id        String   @id @default(cuid())
  uid       String   @unique
  gid       String
  xp        Int      @default(0)
  coins     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Guild     Guild    @relation(fields: [gid], references: [gid])
}

model Role {
  id        String   @id @default(cuid())
  rid       String   @unique
  gid       String
  price     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Guild     Guild    @relation(fields: [gid], references: [gid])
}
